# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: Supabase Dashboard → Project Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Alternative Supabase URL (used in some API routes)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# DOMAIN CONFIGURATION
# ============================================
# Main Website URL (paing.xyz)
NEXT_PUBLIC_SITE_URL=https://paing.xyz

# Admin Panel URL (admin.paing.xyz)
NEXT_PUBLIC_ADMIN_URL=https://admin.paing.xyz

# Alternative App URL (used in some queries)
NEXT_PUBLIC_APP_URL=https://paing.xyz

# ============================================
# ADMIN CONFIGURATION
# ============================================
# Admin email addresses (comma-separated)
NEXT_PUBLIC_ADMIN_EMAILS=admin@example.com

# ============================================
# STRIPE CONFIGURATION
# ============================================
# Get these from: Stripe Dashboard → Developers → API keys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Stripe Webhook Secret
# Get from: Stripe Dashboard → Developers → Webhooks → Add endpoint
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# ============================================
# EMAIL CONFIGURATION
# ============================================
# Option 1: Resend (Recommended for production)
RESEND_API_KEY=re_your-resend-api-key
RESEND_FROM_EMAIL=Azone <noreply@paing.xyz>

# Option 2: Gmail SMTP (Currently in use)
GMAIL_USER=paingminthant1996@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password-here
GMAIL_FROM_EMAIL=Azone <paingminthant1996@gmail.com>

# ============================================
# GITHUB CONFIGURATION
# ============================================
# Get from: GitHub Settings → Developer settings → Personal access tokens → Tokens (classic)
# Required scopes: repo, read:org, workflow
GITHUB_TOKEN=ghp_your-github-personal-access-token-here

# ============================================
# CLOUDFLARE CONFIGURATION (Master Key - recommended for deploy)
# ============================================
# Get Global API Key: Dashboard → My Profile → API Tokens → Global API Key
CLOUDFLARE_EMAIL=your-cloudflare-email@example.com
CLOUDFLARE_API_KEY=your-cloudflare-global-api-key-here
CLOUDFLARE_ACCOUNT_ID=your-account-id-here

# ============================================
# OPTIONAL CONFIGURATION
# ============================================
# Google Analytics (Optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Playwright Test Base URL (Optional)
# PLAYWRIGHT_TEST_BASE_URL=http://localhost:3000

# Node Environment (Automatically set by Next.js)
# NODE_ENV=production

# ============================================
# NOTES
# ============================================
# 1. Replace all placeholder values with your actual credentials
# 2. Never commit this file or .env.local to Git
# 3. .env.local is already in .gitignore
# 4. For production, add these to Cloudflare Worker Variables and Secrets
# 5. Keep tokens secure and never share them publicly

